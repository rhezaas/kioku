{
	"include": [
		"./src/**/*.ts"
	],
	"exclude": [
		"node_modules/*"
	],
	"compilerOptions": {
		"baseUrl": "./src",
		"lib": [
			"es5",
			"es6",
			"es2017.object"
		],
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": false,
		"noUnusedLocals": true,
		"allowSyntheticDefaultImports": true,
		"removeComments": true,
		"listEmittedFiles": false,
		"declaration": true
	}
}